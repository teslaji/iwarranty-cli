{
    "display": "Node LTS",
    "_version": "20.11.0",
    "compilerOptions": {
        "lib": [
            "ES2023"
        ],
        "outDir": "dist",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es2022",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
    },
    "include": [
        "src/**/*.ts",
        "index.ts"
    ],
}